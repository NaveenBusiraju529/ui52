<mvc:View controllerName="timenew.controller.time4"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:unified="sap.ui.unified"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    displayBlock="true"
    height="100%">
    <Page id="time4" title="{i18n>title}" enableScrolling="false" class="sapUiNoContentPadding">
        <headerContent>
            <Button text="Switch to Time3 View" icon="sap-icon://arrow-left" press=".onNavToTime3" class="sapUiSmallMarginEnd"/>
        </headerContent>
        <content>
            <!-- Use FlexBox with no padding or margins -->
            <FlexBox id="dashboardLayout" class="dashboardLayout" width="100%" height="100%" renderType="Bare">
                <!-- Left side with tiles - 40% width -->
                <FlexBox id="tilesContainer" class="tilesContainer" width="40%" height="100%" direction="Column" renderType="Bare">
                    
                    <!-- Two-column layout for tiles -->
                    <FlexBox width="100%" justifyContent="SpaceBetween" class="tileColumns sapUiSmallMarginBottom time4TileColumnsContainer">
                        
                        <!-- Left column: Timesheet, My Reports, and My Booking -->
                        <FlexBox width="48%" direction="Column" class="tileColumn time4TileColumn">
                            <!-- Timesheet Tile Fragment -->
                            <core:Fragment fragmentName="timenew.view.fragments.tiles.TimesheetTile" type="XML" />
                            
                            <!-- My Reports Tile Fragment -->
                            <core:Fragment fragmentName="timenew.view.fragments.tiles.ReportsTile" type="XML" />
                            
                            <!-- My Booking Tile Fragment -->
                            <core:Fragment fragmentName="timenew.view.fragments.tiles.BookingTile" type="XML" />
                        </FlexBox>
                        
                        <!-- Right column: Manage Team and Manage Project -->
                        <FlexBox width="48%" direction="Column" class="tileColumn time4TileColumn">
                            <!-- Manage Team Tile Fragment -->
                            <core:Fragment fragmentName="timenew.view.fragments.tiles.TeamTile" type="XML" />
                            
                            <!-- Manage Project Tile Fragment -->
                            <core:Fragment fragmentName="timenew.view.fragments.tiles.ProjectTile" type="XML" />
                        </FlexBox>
                    </FlexBox>
                </FlexBox>
                
                <!-- Right side with calendar - 60% width -->
                <FlexBox id="calendarContainer" class="calendarContainer" width="60%" height="100%" direction="Column" renderType="Bare">
                    <!-- Calendar Fragment -->
                    <core:Fragment fragmentName="timenew.view.fragments.calendar.TeamCalendar" type="XML" />
                </FlexBox>
            </FlexBox>
        </content>
    </Page>
</mvc:View> 