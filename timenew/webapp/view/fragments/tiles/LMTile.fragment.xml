<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <f:Card width="100%" class="sapUiTinyMarginBottom equalHeightTile">
        <f:content>
            <FlexBox class="sapUiTinyMargin" direction="Column" width="100%">
                <HBox alignItems="Center">
                    <core:Icon src="sap-icon://manager" size="30px"/>
                    <Text class="sapUiSmallMarginBegin boldFont" text="{i18n>manageTeam}"/>
                </HBox>
                <VBox class="sapUiTinyMargin">
                    <Button
                        icon="sap-icon://slim-arrow-right"
                        text="Approve Time"
                        type="Transparent"
                        press=".onApproveTimePress"
                        app:semObject="Team"
                        app:action="ApproveTime">
                        <customData>
                            <core:CustomData key="badge" value="" visible="true"/>
                        </customData>
                    </Button>
                    <Button
                        icon="sap-icon://slim-arrow-right"
                        text="Time Reports"
                        type="Transparent"
                        press=".onTimeReportsPress"
                        app:semObject="Team"
                        app:action="TimeReports">
                        <customData>
                            <core:CustomData key="badge" value="" visible="true"/>
                        </customData>
                    </Button>
                    <Button
                        icon="sap-icon://slim-arrow-right"
                        text="Assignment Report (LM)"
                        type="Transparent"
                        press=".onAssignmentReportLMPress"
                        app:semObject="Team"
                        app:action="AssignmentReportLM">
                        <customData>
                            <core:CustomData key="badge" value="" visible="true"/>
                        </customData>
                    </Button>
                    <Button
                        icon="sap-icon://slim-arrow-right"
                        text="Assignment Report (PM)"
                        type="Transparent"
                        press=".onAssignmentReportPMPress"
                        app:semObject="Team"
                        app:action="AssignmentReportPM">
                        <customData>
                            <core:CustomData key="badge" value="" visible="true"/>
                        </customData>
                    </Button>
                    <Button
                        icon="sap-icon://slim-arrow-right"
                        text="Home Working Report"
                        type="Transparent"
                        press=".onHomeWorkingReportPress"
                        app:semObject="Team"
                        app:action="HomeWorkingReport">
                        <customData>
                            <core:CustomData key="badge" value="" visible="true"/>
                        </customData>
                    </Button>
                    <Button
                        icon="sap-icon://slim-arrow-right"
                        text="Timesheet Insights"
                        type="Transparent"
                        press=".onTimesheetInsightsPress"
                        app:semObject="Team"
                        app:action="TimesheetInsights">
                        <customData>
                            <core:CustomData key="badge" value="" visible="true"/>
                        </customData>
                    </Button>
                </VBox>
            </FlexBox>
        </f:content>
    </f:Card>
</mvc:View>