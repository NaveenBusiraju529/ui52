<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <GenericTile id="lmTile" 
        frameType="OneByOne" 
        press=".onLMTilePress">
        <TileContent>
            <VBox height="100%">
                <!-- Top row with icon and title -->
                <HBox width="100%" alignItems="Center">
                    <core:Icon src="sap-icon://account"/>
                    <Title text="Line Manager"/>
                </HBox>
                
                <!-- Content immediately below header -->
                <VBox width="100%">
                    <Text text="LM Functions"/>
                    <Link text="> Approve Time LM" press=".onLMApproveTimePress"/>
                    <Link text="> Time Reports LM" press=".onLMTimeReportsPress"/>
                    <Link text="> Assignment Report (LM) LM" press=".onLMAssignmentLMPress"/>
                    <Link text="> Assignment Report (PM) LM" press=".onLMAssignmentPMPress"/>
                    <Link text="> Home Working Report LM" press=".onLMHomeWorkingPress"/>
                    <Link text="> Timesheet Insights LM" press=".onLMTimesheetInsightsPress"/>
                </VBox>
            </VBox>
        </TileContent>
    </GenericTile>
    
</core:FragmentDefinition>