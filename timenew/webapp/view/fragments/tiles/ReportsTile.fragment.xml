<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <GenericTile id="myReportsTile" 
        frameType="OneByOne" 
        press=".onMyReportsTilePress">
        <TileContent>
            <VBox height="100%">
                <!-- Top row with icon and title -->
                <HBox width="100%" alignItems="Center">
                    <core:Icon src="sap-icon://bar-chart"/>
                    <Title text="My Reports"/>
                </HBox>
                
                <!-- Content immediately below header -->
                <VBox width="100%">
                    <Text text="3 Available Reports"/>
                    <Link text="> Activity Report" press=".onActivityReportPress"/>
                    <Link text="> Customer Timesheet" press=".onCustomerTimesheetPress"/>
                    <Link text="> Home Working Report" press=".onHomeWorkingReportPress"/>
                </VBox>
            </VBox>
        </TileContent>
    </GenericTile>
</mvc:View>