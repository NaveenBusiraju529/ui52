<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <f:Card width="100%" class="sapUiTinyMarginBottom equalHeightTile">
        <f:content>
            <FlexBox class="sapUiTinyMargin" width="100%">
                <VBox width="100%">
                    <HBox>
                        <core:Icon src="sap-icon://group" size="30px"/>
                        <VBox class="sapUiSmallMarginBegin">
                            <Text class="boldFont" text="{i18n>manageMyTeam}"/>
                        </VBox>
                    </HBox>
                    <IconTabBar
                        id="teamManageTabBar"
                        class="sapUiTinyMarginTop"
                        expandable="false"
                        expanded="true"
                        select=".onTeamManageTabSelect">
                        <items>
                            <IconTabFilter
                                key="PM"
                                text="{i18n>projectManager}">
                                <VBox class="sapUiTinyMargin">
                                    <Button
                                        icon="sap-icon://slim-arrow-right"
                                        text="Approve Time"
                                        type="Transparent"
                                        press=".onApproveTimePress"
                                        app:semObject="Team"
                                        app:action="ApproveTime">
                                        <customData>
                                            <BadgeCustomData key="badge" value="" visible="true"/>
                                        </customData>
                                    </Button>
                                    <Button
                                        icon="sap-icon://slim-arrow-right"
                                        text="Time Reports"
                                        type="Transparent"
                                        press=".onTimeReportsPress"
                                        app:semObject="Team"
                                        app:action="TimeReports">
                                        <customData>
                                            <BadgeCustomData key="badge" value="" visible="true"/>
                                        </customData>
                                    </Button>
                                    <Button
                                        icon="sap-icon://slim-arrow-right"
                                        text="Assignment Report (PM)"
                                        type="Transparent"
                                        press=".onAssignmentReportPMPress"
                                        app:semObject="Team"
                                        app:action="AssignmentReportPM">
                                        <customData>
                                            <BadgeCustomData key="badge" value="" visible="true"/>
                                        </customData>
                                    </Button>
                                    <Button
                                        icon="sap-icon://slim-arrow-right"
                                        text="Home Working Report"
                                        type="Transparent"
                                        press=".onHomeWorkingReportPress"
                                        app:semObject="Team"
                                        app:action="HomeWorkingReport">
                                        <customData>
                                            <BadgeCustomData key="badge" value="" visible="true"/>
                                        </customData>
                                    </Button>
                                    <Button
                                        icon="sap-icon://slim-arrow-right"
                                        text="Timesheet Insights"
                                        type="Transparent"
                                        press=".onTimesheetInsightsPress"
                                        app:semObject="Team"
                                        app:action="TimesheetInsights">
                                        <customData>
                                            <BadgeCustomData key="badge" value="" visible="true"/>
                                        </customData>
                                    </Button>
                                </VBox>
                            </IconTabFilter>
                            <IconTabFilter
                                key="LM"
                                text="{i18n>lineManager}">
                                <VBox class="sapUiTinyMargin">
                                    <Button
                                        icon="sap-icon://slim-arrow-right"
                                        text="Approve Time"
                                        type="Transparent"
                                        press=".onApproveTimePress"
                                        app:semObject="Team"
                                        app:action="ApproveTime">
                                        <customData>
                                            <BadgeCustomData key="badge" value="{myConfigSet>/pendingApprovalCount}" visible="true"/>
                                        </customData>
                                    </Button>
                                    <Button
                                        icon="sap-icon://slim-arrow-right"
                                        text="Time Reports"
                                        type="Transparent"
                                        press=".onTimeReportsPress"
                                        app:semObject="Team"
                                        app:action="TimeReports">
                                        <customData>
                                            <BadgeCustomData key="badge" value="" visible="true"/>
                                        </customData>
                                    </Button>
                                    <Button
                                        icon="sap-icon://slim-arrow-right"
                                        text="Assignment Report (LM)"
                                        type="Transparent"
                                        press=".onAssignmentReportLMPress"
                                        app:semObject="Team"
                                        app:action="AssignmentReportLM">
                                        <customData>
                                            <BadgeCustomData key="badge" value="" visible="true"/>
                                        </customData>
                                    </Button>
                                    <Button
                                        icon="sap-icon://slim-arrow-right"
                                        text="Home Working Report"
                                        type="Transparent"
                                        press=".onHomeWorkingReportPress"
                                        app:semObject="Team"
                                        app:action="HomeWorkingReport">
                                        <customData>
                                            <BadgeCustomData key="badge" value="" visible="true"/>
                                        </customData>
                                    </Button>
                                    <Button
                                        icon="sap-icon://slim-arrow-right"
                                        text="Timesheet Insights"
                                        type="Transparent"
                                        press=".onTimesheetInsightsPress"
                                        app:semObject="Team"
                                        app:action="TimesheetInsights">
                                        <customData>
                                            <BadgeCustomData key="badge" value="" visible="true"/>
                                        </customData>
                                    </Button>
                                </VBox>
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </VBox>
            </FlexBox>
        </f:content>
    </f:Card>
</mvc:View> 