<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <GenericTile id="teamManageTile" 
        frameType="OneByOne" 
        press=".onTeamManageTilePress">
        <TileContent>
            <VBox height="100%">
                <!-- Top row with icon and title -->
                <HBox width="100%" alignItems="Center">
                    <core:Icon src="sap-icon://group"/>
                    <Title text="Manage Team"/>
                </HBox>
                
                <!-- Tabs for PM and LM -->
                <IconTabBar id="teamTabBar" expanded="true" applyContentPadding="false">
                    <!-- PM Tab -->
                    <items>
                        <IconTabFilter id="pmTab" text="PM" key="pm">
                            <VBox width="100%">
                                <Link text="> Approve Time" press=".onPMApproveTimePress"/>
                                <Link text="> Time Reports" press=".onPMTimeReportsPress"/>
                                <Link text="> Assignment Report (LM)" press=".onPMAssignmentLMPress"/>
                                <Link text="> Assignment Report (PM)" press=".onPMAssignmentPMPress"/>
                                <Link text="> Home Working Report" press=".onPMHomeWorkingPress"/>
                                <Link text="> Timesheet Insights" press=".onPMTimesheetInsightsPress"/>
                            </VBox>
                        </IconTabFilter>
                        
                        <!-- LM Tab -->
                        <IconTabFilter id="lmTab" text="LM" key="lm">
                            <VBox width="100%">
                                <Link text="> Approve Time" press=".onLMApproveTimePress"/>
                                <Link text="> Time Reports LM" press=".onLMTimeReportsPress"/>
                                <Link text="> Assignment Report (LM) LM" press=".onLMAssignmentLMPress"/>
                                <Link text="> Home Working Report LM" press=".onLMHomeWorkingPress"/>
                                <Link text="> Timesheet Insights LM" press=".onLMTimesheetInsightsPress"/>
                            </VBox>
                        </IconTabFilter>
                    </items>
                </IconTabBar>
            </VBox>
        </TileContent>
    </GenericTile>
    
</core:FragmentDefinition> 