<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <GenericTile id="manageTeamTile" 
        frameType="OneByOne" 
        press=".onManageTeamTilePress">
        <TileContent>
            <VBox height="100%">
                <!-- Top row with icon and title -->
                <HBox width="100%" alignItems="Center">
                    <core:Icon src="sap-icon://group"/>
                    <Title text="Manage Team"/>
                </HBox>
                
                <!-- Content immediately below header -->
                <VBox width="100%">
                    <Text text="Team Management"/>
                    <Link text="> Team Overview" press=".onTeamOverviewPress"/>
                    <Link text="> Team Calendar" press=".onTeamCalendarPress"/>
                    <Link text="> Approvals" press=".onApprovalsPress"/>
                </VBox>
            </VBox>
        </TileContent>
    </GenericTile>
</mvc:View>