<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <GenericTile id="timesheetTile" 
        frameType="OneByOne" 
        press=".onTimesheetTilePress">
        <TileContent>
            <VBox height="100%">
                <!-- Top row with icon and title -->
                <HBox width="100%" alignItems="Center">
                    <core:Icon src="sap-icon://time-entry-request"/>
                    <Title text="Timesheet"/>
                </HBox>
                
                <!-- Content immediately below header -->
                <VBox width="100%">
                    <Text text="Time Entry Options"/>
                    <Link text="> Entry" press=".onTimesheetEntryPress"/>
                </VBox>
            </VBox>
        </TileContent>
    </GenericTile>
</mvc:View>