<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <GenericTile id="timesheetTile" 
        class="customTileLayout tileFullWidth timeTile time4Tile"
        frameType="OneByOne" 
        press=".onTimesheetTilePress">
        <TileContent class="tileContent">
            <VBox height="100%">
                <!-- Top row with icon and title -->
                <HBox width="100%" alignItems="Center" class="tileHeader">
                    <core:Icon src="sap-icon://time-entry-request" class="tileIcon"/>
                    <Title text="Timesheet" class="tileTitle"/>
                </HBox>
                
                <!-- Content immediately below header -->
                <VBox width="100%" class="tileBody">
                    <Text text="Time Entry Options" class="tileSubtitle"/>
                    <Link text="> Entry" press=".onTimesheetEntryPress" class="tileLink"/>
                </VBox>
            </VBox>
        </TileContent>
    </GenericTile>
</mvc:View>