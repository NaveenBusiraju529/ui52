<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <GenericTile id="manageProjectTile" 
        frameType="OneByOne" 
        press=".onManageProjectTilePress">
        <TileContent>
            <VBox height="100%">
                <!-- Top row with icon and title -->
                <HBox width="100%" alignItems="Center">
                    <core:Icon src="sap-icon://project-definition-triangle"/>
                    <Title text="Manage Project"/>
                </HBox>
                
                <!-- Content immediately below header -->
                <VBox width="100%">
                    <Text text="Project Management"/>
                    <Link text="> Project Overview" press=".onProjectOverviewPress"/>
                    <Link text="> Resource Planning" press=".onResourcePlanningPress"/>
                    <Link text="> Project Reports" press=".onProjectReportsPress"/>
                </VBox>
            </VBox>
        </TileContent>
    </GenericTile>
</mvc:View>