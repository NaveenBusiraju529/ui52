<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <GenericTile id="myBookingTile" 
        class="customTileLayout tileFullWidth timeTile time4Tile sapUiSmallMarginTop"
        frameType="OneByOne" 
        press=".onMyBookingTilePress">
        <TileContent class="tileContent">
            <!-- Top row with title and icon -->
            <HBox width="100%" justifyContent="SpaceBetween" class="tileHeader">
                <Title text="My Booking" class="tileTitle"/>
                <core:Icon src="sap-icon://calendar" class="tileIcon"/>
            </HBox>
            
            <!-- Content immediately below header -->
            <VBox width="100%" class="tileBody" height="100%">
                <Text text="Booking Options" class="tileSubtitle"/>
                <Link text="&gt; Add Booking" press=".onAddBookingPress" class="tileLink"/>
                <Link text="&gt; View Bookings" press=".onViewBookingsPress" class="tileLink"/>
                <FlexBox height="100%" width="100%"></FlexBox>
            </VBox>
        </TileContent>
    </GenericTile>
</mvc:View> 